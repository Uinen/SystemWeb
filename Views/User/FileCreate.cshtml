@model SystemWeb.Models.FilePath

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("FileCreate", "User", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Carica file</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Document", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Document" name="upload" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Torna indietro", "File")
</div>
