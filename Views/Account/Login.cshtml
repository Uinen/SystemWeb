@model SystemWeb.Models.LoginViewModel
        @{Html.EJ().Dialog("lognForm").Title("Autenticazione").IsResponsive(true).Containment(".control").ContentTemplate(
              @<div>
                  @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                  {
                      @Html.AntiForgeryToken()
                      @Html.ValidationSummary(true)
                   <table>
                       <tr>
                           <td>
                               @Html.LabelFor(m => m.UserName)
                               @Html.TextBoxFor(m => m.UserName, new { @class = "ejinputtext" })
                               @Html.ValidationMessageFor(m => m.UserName)
                           </td>
                       </tr>
                       <tr>
                           <td>
                               @Html.LabelFor(m => m.Password)
                               @Html.PasswordFor(m => m.Password, new { @class = "ejinputtext" })
                               @Html.ValidationMessageFor(m => m.Password)
                           </td>
                       </tr>
                       <tr>
                           <td>
                               @Html.CheckBoxFor(m => m.RememberMe)
                               @Html.Label("Ricordami", new { @class = "top" })
                           </td>
                       </tr>
                       <tr>
                           <td align="center">
                               @Html.EJ().Button("downloadBtn").Type(ButtonType.Submit).Size(ButtonSize.Medium).Height("30").Width("100").Text("ACCEDI")
                           </td>
                       </tr>
                       <tr>
                           <td align="center" class="acc">
                               Non hai un account ? <a href="#">Registrati</a>
                           </td>
                       </tr>
                   </table>
                  }
                       </div>).EnableModal(true).EnableResize(false).Width(291).IsResponsive(true).CloseOnEscape(false).Render();
               }
<style>
    .e-dialog .e-dialog-icon {
        visibility: hidden;
    }

    label.error {
        color: red;
    }

    .htmljssamplebrowser.material .control {
        height: 700px;
    }

    .control {
        height: auto;
        position: relative;
    }

    .ejinputtext {
        height: 25px;
        width: 100%;
        margin-bottom: 10px;
    }

    .row .cols-sample-area {
        padding: 20px;
        margin-bottom: 50px;
        position: relative;
    }

    .acc {
        font-size: 12px;
        padding-top: 8px;
    }

    .top {
        margin-top: 5px;
    }

    .reqired {
        margin: 0 0 3px 0;
        color: red;
        display: inline-block;
    }

    .e-btn.e-button.e-js {
        border: none;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $("#btnOpen").hide();
        function onclick() {
            $("#lognForm").ejDialog("open");
            $("#btnOpen").hide();
        }
        function formsubmit() {
            $("#form1").valid();
        }
        function coupeClick() {
            $("#r8Coupe").ejDialog("open");
        }
        function spyderClick() {
            $("#r8Spyder").ejDialog("open");
        }
        function onDialogClose(args) {
            $("#btnOpen").show();
        }
</script>
}
