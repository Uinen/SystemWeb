@model SystemWeb.Models.RegisterBindingModel
<div class="col-sm-5">
    <div class="form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Iscriviti</h3>
                <p>Compila il form sottostante:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-pencil"></i>
            </div>
        </div>
        <div class="form-bottom">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "registration-form", role = "form" }))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary();
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-first-name form-control", @title = "Inserisci il tuo Username", placeholder = "Username" })
                </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-first-name form-control", @title = "Inserisci la tua mail", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-first-name form-control", @title = "Inserisci la tua Password", placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-first-name form-control", @title = "Conferma la tua Password", placeholder = "Conferma Password" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfileSurname, new { @class = "form-first-name form-control", @title = "Inserisci il tuo Cognome", placeholder = "Cognome" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfileName, new { @class = "form-first-name form-control", @title = "Inserisci il tuo Nome", placeholder = "Nome" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfileAdress, new { @class = "form-first-name form-control", @title = "Inserisci il tuo Indirizzo", placeholder = "Indirizzo es: via/v.le/p.zza" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfileCity, new { @class = "form-first-name form-control", @title = "Inserisci il comune di residenza", placeholder = "Comune di Residenza" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfilezipCode, new { @class = "form-first-name form-control", @title = "Inserisci il tuo CAP", placeholder = "Codice d'Avviamento Postale" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mProfileNation, new { @class = "form-first-name form-control", @title = "Inserisci la tua nazione di nascita", placeholder = "Nazione" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.mPvName, new { @class = "form-first-name form-control", @title = "Inserisci il numero del tuo Punto vendita", placeholder = "Punto Vendita" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.mPvFlagId, ViewBag.FlagId as SelectList, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn" value="Registrati" />
            }
        </div>
    </div>
</div>
