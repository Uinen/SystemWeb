<section id="testimonial" class="block">
    <div class="container">
        <div class="title-box">
            @model GestioniDirette.Models.SendCodeViewModel
            @{
                ViewBag.Title = "Invia il codice di verifica";
            }
            <h2 class="block-title wow animated zoomIn" style="color:black">@ViewBag.Title.</h2>
        </div>
            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <div class="feature-box wow animated flipInX animated">
                            Provider:
                            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            @section Scripts {
                @Scripts.Render("~/Bundle/jquery")
            }
    </div>
</section>
