@model SystemWeb.ViewModels.RegistrationViewModel
<h4>Sottoscrivi la tua azienda.</h4>
<hr />
@using (Html.BeginForm("RegisterStep3", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.MinHiddenFor(m => m.WizardID)
    @Html.MinHiddenFor(m => m.WizardType)
    @Html.HiddenClassFor(m => m.step1)
    @Html.HiddenClassFor(m => m.step2)

<div class="form-group">
    @Html.LabelFor(model => model.step3.name, "Nome", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.step3.name, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.step3.iva, "Numero partiva iva", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.step3.iva, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.step3.RagioneSociale.Nome, "Tipo Azienda", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.step3.RagioneSociale.RagioneSocialeId, new SelectList("RagioneSocialeId", "Nome"))
    </div>
</div>
<button type="submit">Avanti</button>
}
